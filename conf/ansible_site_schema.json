{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Ansible Playbook Schema",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "name": {
        "type": "string",
        "description": "The name of the play."
      },
      "hosts": {
        "type": "string",
        "description": "A list of hosts or groups the play targets."
      },
      "become": {
        "type": "boolean",
        "description": "Whether to use privilege escalation."
      },
      "gather_facts": {
        "type": "boolean",
        "description": "Whether to collect system information before running."
      },
      "roles": {
        "type": "array",
        "items": {
          "oneOf": [
            { "type": "string" },
            {
              "type": "object",
              "properties": {
                "role": { "type": "string" },
                "tags": {
                  "type": "array",
                  "items": { "type": "string" }
                }
              },
              "required": ["role"]
            }
          ]
        }
      }
    },
    "required": ["hosts", "roles"]
  }
}
